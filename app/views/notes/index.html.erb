<div class="row justify-content-center bg-white border py-3 mb-2">
  <div class="col-sm-8">
    <h4>Listing all notes</h4>
  </div>
  <div class="col-sm-4 text-right">
    <%= button_to new_note_path, class: 'btn btn-primary' do %>
      New note
    <% end %>
  </div>
</div>

<%= render @notes %>

<div class="row justify-content-center">
  <%= paginate @notes, theme: 'twitter-bootstrap-4',
                      pagination_class: 'pagination-md',
                      nav_class: 'd-inline-b' %>
</div>
